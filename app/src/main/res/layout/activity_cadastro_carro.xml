<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.condominiolegal.condominiolegal.activity.CadastroCarroActivity">

    <include android:id="@+id/tb_cadastro_carro"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_cadastro_carro"
        android:id="@+id/scrollView2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_cadastro_carro_blocoNumeroApartamento"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cadastro_carro_blocoNumeroApartamento"
                android:id="@+id/edit_cadastro_carro_placa"
                android:hint="Placa" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_cadastro_carro_placa"
                android:id="@+id/edit_cadastro_carro_modelo"
                android:hint="Modelo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_cadastro_carro_modelo"
                android:id="@+id/edit_cadastro_carro_marca"
                android:hint="Marca" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_cadastro_carro_marca"
                android:id="@+id/edit_cadastro_carro_nomeDono"
                android:hint="Nome do Dono" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_below="@+id/edit_cadastro_carro_nomeDono"
                android:id="@+id/edit_cadastro_carro_cpf"
                android:hint="CPF" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/salvar"
                android:theme="@style/botaoPadrao"
                android:id="@+id/bt_cadastro_carro_salvar"
                android:layout_below="@+id/edit_cadastro_carro_cpf" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
