<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.condominiolegal.condominiolegal.activity.ListaComunicadoActivity">

    <include android:id="@+id/tb_lista_comunicado"
        layout="@layout/toolbar" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lv_lista_comunicado"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_lista_comunicado"
        android:divider="@color/cinza"
        android:dividerHeight="1dp"
        android:layout_gravity="center_horizontal|top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_lista_comunicado_inf"
        android:layout_below="@+id/tb_lista_comunicado"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>
