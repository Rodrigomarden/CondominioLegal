<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Palio Fire"
        android:textColor="@android:color/black"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_modelo_adapter_lista_carro" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FIAT"
        android:textColor="@android:color/black"
        android:id="@+id/tv_marca_adapter_lista_carro"
        android:layout_alignTop="@+id/tv_modelo_adapter_lista_carro"
        android:layout_toRightOf="@+id/tv_modelo_adapter_lista_carro"
        android:layout_toEndOf="@+id/tv_modelo_adapter_lista_carro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Placa"
        android:textColor="@android:color/black"
        android:id="@+id/tv_placa_adapter_lista_carro"
        android:layout_below="@+id/tv_modelo_adapter_lista_carro"
        android:layout_alignLeft="@+id/tv_modelo_adapter_lista_carro"
        android:layout_alignStart="@+id/tv_modelo_adapter_lista_carro" />
</RelativeLayout>