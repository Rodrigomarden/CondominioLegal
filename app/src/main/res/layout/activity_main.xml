<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <include android:id="@+id/tb_main"
        layout="@layout/toolbar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/bt_usuario"
        android:layout_below="@+id/tb_main"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartamento"
        android:id="@+id/bt_apartamento"
        android:layout_below="@+id/bt_usuario"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morador"
        android:id="@+id/bt_morador"
        android:layout_below="@+id/bt_apartamento"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carro"
        android:id="@+id/bt_carro"
        android:layout_below="@+id/bt_morador"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
