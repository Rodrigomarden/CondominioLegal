<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:id="@+id/tv_nome_adapter_lista_usuario"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="Nome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:id="@+id/tv_perfil_adapter_lista_usuario"
        android:text="Perfil"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignTop="@+id/tv_nome_adapter_lista_usuario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:id="@+id/tv_email_adapter_lista_usuario"
        android:layout_below="@+id/tv_nome_adapter_lista_usuario"
        android:layout_alignLeft="@+id/tv_nome_adapter_lista_usuario"
        android:layout_alignStart="@+id/tv_nome_adapter_lista_usuario"
        android:text="Email" />

</RelativeLayout>