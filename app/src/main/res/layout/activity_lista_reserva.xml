<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.condominiolegal.condominiolegal.activity.ListaReservaActivity">

    <include android:id="@+id/tb_lista_reserva"
        layout="@layout/toolbar" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edit_lista_reserva_data"
        android:layout_below="@+id/tb_lista_reserva"
        android:hint="Data da reserva"
        android:paddingTop="10dp" />

     <Spinner
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/spinner_lista_reserva_espaco"
         android:layout_marginTop="2dp"
         android:layout_below="@+id/edit_lista_reserva_data"
         android:paddingTop="10dp" />

     <ListView
         android:layout_width="match_parent"
         android:id="@+id/lv_lista_reserva"
         android:layout_height="match_parent"
         android:layout_below="@+id/spinner_lista_reserva_espaco"
         android:divider="@color/cinza"
         android:dividerHeight="1dp"
         android:layout_gravity="center_horizontal|top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_lista_reserva_inf"
        android:layout_below="@+id/spinner_lista_reserva_espaco"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>
